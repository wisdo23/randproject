# FastAPI settings
APP_NAME=Rand Lottery API
APP_ENV=development
APP_DEBUG=true

# Database settings
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=rand_lottery
POSTGRES_USER=rand
POSTGRES_PASSWORD=randpass
DATABASE_URL=postgresql+psycopg://rand:randpass@postgres:5432/rand_lottery

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:4173

# WhatsApp Business API (optional)
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_DEFAULT_RECIPIENT=

# JWT auth
JWT_SECRET=replace-with-secure-secret
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# Telegram bot (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_DEFAULT_CHAT=

# Email SMTP settings
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
SMTP_USE_SSL=false
SMTP_FROM_ADDRESS=

# Manager portal link used in help emails
MANAGER_PORTAL_URL=http://localhost:5173/login
